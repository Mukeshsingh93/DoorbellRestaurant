<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/door_bell_logo"
            android:layout_centerHorizontal="true"/>

        <TextView android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doorbell Vendor"
            android:layout_below="@+id/imgLogo"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

       <EditText android:id="@+id/editUser"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_below="@+id/txtTitle"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:background="@drawable/editborder"
           android:hint="Enter Username"
           android:padding="10dp"
           android:inputType="textEmailAddress"
           />

        <EditText android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editUser"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/editborder"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="10dp"
            />

        <TextView android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editPassword"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="SIGN IN"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"/>

    </RelativeLayout>



</RelativeLayout>